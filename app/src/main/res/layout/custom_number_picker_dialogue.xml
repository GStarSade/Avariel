<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="fill_parent">

    <TextView
        android:id="@+id/tv_custom_dialogue_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:minHeight="50dp"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    <NumberPicker
        android:id="@+id/np_custom_dialogue"
        android:layout_width="match_parent"
        android:layout_height="200dp"

        android:layout_alignParentStart="true"
        android:layout_below="@id/tv_custom_dialogue_title"
        android:layout_marginTop="@dimen/view_margin_spacing_tiny"
        android:layout_marginBottom="@dimen/view_margin_spacing_tiny"/>

    <Button
        android:id="@+id/b_cancel_custom_dialogue"
        android:layout_width="145dp"
        android:layout_height="150dp"

        android:layout_below="@+id/np_custom_dialogue"
        android:layout_marginEnd="@dimen/view_margin_spacing_small"

        android:background="@android:color/holo_red_light"
        android:text="@string/cancel" />

    <Button
        android:id="@+id/b_okay_custom_dialogue"
        android:layout_width="145dp"
        android:layout_height="150dp"

        android:layout_below="@id/np_custom_dialogue"
        android:background="@android:color/holo_green_light"
        android:layout_toEndOf="@id/b_cancel_custom_dialogue"

        android:text="@string/okay" />

</RelativeLayout>