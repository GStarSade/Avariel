<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <Button
        android:id="@+id/b_delete_attack_row"
        android:layout_width="@dimen/button_width_min"
        android:layout_height="@dimen/button_height_min"
        android:layout_gravity="center|top"
        android:text="Delete" />

    <EditText
        android:id="@+id/et_name_value"
        android:layout_width="@dimen/content_list_name_width"
        android:layout_height="@dimen/content_attack_widget_height"
        android:layout_marginStart="@dimen/content_attack_spacing"
        android:inputType="textCapWords" />

    <TextView
        android:id="@+id/tv_attack_bonus_value"
        android:layout_width="60dp"
        android:layout_height="@dimen/content_attack_widget_height"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/content_attack_spacing"
        android:text="@string/number_hash" />


    <Spinner
        android:id="@+id/s_damage_die_type_value"
        android:layout_width="100dp"
        android:layout_height="@dimen/content_attack_widget_height"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/content_attack_spacing"
        android:spinnerMode="dropdown" />

    <EditText
        android:id="@+id/et_damage_number_of_die_value"
        android:layout_width="100dp"
        android:layout_height="@dimen/content_attack_widget_height"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/content_attack_spacing"
        android:hint="@string/number_hash"
        android:imeOptions="flagNoExtractUi|actionDone"
        android:inputType="number" />

    <Spinner
        android:id="@+id/s_damage_type_value"
        android:layout_width="100dp"
        android:layout_height="@dimen/content_attack_widget_height"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/content_attack_spacing"
        android:spinnerMode="dropdown" />

    <Button
        android:id="@+id/b_view_attack"
        android:layout_width="@dimen/button_width_min"
        android:layout_height="@dimen/button_height_min"
        android:layout_gravity="center|top"
        android:text="View ATK" />

</LinearLayout>